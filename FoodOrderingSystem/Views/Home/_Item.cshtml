@model IEnumerable<FoodOrderingSystem.Models.tblItem>
@using FoodOrderingSystem.Models;

<section class="ftco-section">
    <div class="container">

        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <h2 class="mb-4">Today's Special Items</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
    </div>
    <div class="container-wrap">
        <div class="row no-gutters d-flex">
            @foreach (var item in Model)
            {

                <div class="col-lg-4 d-flex ftco-animate">
                    <div class="services-wrap d-flex">

                        <a href="#" class="img" style="background-image: url(images/ItemImages/@item.SmallImage);"></a>
                        <div class="text p-4">
                            <h3>@item.Title</h3>
                            <p>@item.Description </p>
                            <p class="price"><span>Rs. @item.Price</span> <a href="@Url.Action("AddToCart","ShoppingCart", new { id = item.ItemId }, "")" class="ml-2 btn btn-white btn-outline-white">Order</a></p>
                        </div>
                    </div>
                </div>
            }
            }
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3 mt-5 pt-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h2 class="mb-4">Our Menu Pricing</h2>
                <p class="flip"><span class="deg1"></span><span class="deg2"></span><span class="deg3"></span></p>
                <p class="mt-5">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
        <div class="row">

            @{
                List<tblItem> myitemlist = ItemDB.GetAllFoodRecentItem();
                foreach (var item in myitemlist)
                {
                    <div class="col-md-6">
                        <div class="pricing-entry d-flex ftco-animate">
                            <div class="img" style="background-image: url(images/ItemImages/@item.SmallImage);"></div>
                            <div class="desc pl-3">
                                <div class="d-flex text align-items-center">
                                    <h3><span>@item.Title</span></h3>
                                    <span class="price">Rs. @item.Price</span>
                                </div>
                                <div class="d-block">
                                    <p>@item.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
       
        </div>
    </div>
</section>

