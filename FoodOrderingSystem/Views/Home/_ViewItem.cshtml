@model FoodOrderingSystem.Models.tblItem
<div class="modal-body modal-spa">
    <div class="col-md-5 span-2">
        <div class="item">
            <img src="~/images/ItemImages/@Model.SmallImage" class="img-responsive" alt="">
        </div>
    </div>
    <div class="col-md-7 span-1 ">
        <h3>@Model.Title</h3>
        <p class="in-para"> Get Your Food at Home.</p>
        <div class="price_single">
            <span class="reducedfrom ">@Model.Price</span>

            <div class="clearfix"></div>
        </div>
        <h4 class="quick">Quick Overview:</h4>
        <p class="quick_desc">@Model.Description</p>
        <div class="add-to">
            <a class="btn btn-danger my-cart-btn" href="@Url.Action("AddToCart","ShoppingCart", new { id = @Model.ItemId }, "")"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
            <button class="my-cart-btn my-cart-btn1" style="display:none" data-id="1" data-name="Moong" data-summary="summary 1" data-price="1.50" data-quantity="1" data-image="~/images/ItemImages/@Model.SmallImage"></button>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>